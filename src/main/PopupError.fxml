<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="80" prefWidth="400" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.errorPopupController" >
    <BorderPane>
        <left>
            <FlowPane hgap="50" alignment="CENTER_LEFT">
                <VBox>
                    <Label fx:id="errorMessage"/>
                </VBox>
                <VBox>
                    <ImageView fitHeight="69.0" fitWidth="40" layoutX="1.0" layoutY="-21.0" preserveRatio="true">
                        <Image url="@error.jpg"/>
                    </ImageView>
                </VBox>
            </FlowPane>
        </left>
    </BorderPane>
</AnchorPane>
