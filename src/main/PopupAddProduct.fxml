<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>


<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.PopupAddProductController"
            prefHeight="400.0" prefWidth="1000">
 <BorderPane >
     <left>
         <FlowPane hgap="20">
<HBox>
    <VBox  prefWidth="160" alignment="CENTER">
        <Label text="Add product"  />
        <TextField fx:id="productTitle" promptText="Product to add" />
    </VBox>
    <VBox prefWidth="160" alignment="CENTER" >
<Label text="Add price"/>
        <TextField fx:id="price" promptText="Product price" />
    </VBox>
    <TextField fx:id="description" promptText="Product description"/>

</HBox>
             <ComboBox prefHeight="20" prefWidth="165" promptText="Select main category" fx:id="mainCategory">
                 <items>
                     <FXCollections fx:factory = "observableArrayList"/>
                 </items>
             </ComboBox>
             <ComboBox prefHeight="20" prefWidth="165" promptText="Select sub category" fx:id="subCategory">
                 <items>
                     <FXCollections fx:factory = "observableArrayList"/>
                 </items>
             </ComboBox>
             <Button fx:id="addProductButton" onAction="#addProduct" text="Add Product" />

         </FlowPane>
     </left>
     <center>
         <ListView prefWidth="100" prefHeight="150">
             <Button fx:id="addPictureButton" onAction="#PictureButtonAction" text="Add Picture" />
             <ImageView fx:id="imageView"/>
         </ListView>
     </center>
 </BorderPane>
</AnchorPane>
